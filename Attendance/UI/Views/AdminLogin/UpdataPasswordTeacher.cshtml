                </nav>

            </div>
            <div class="col-lg-9 col-md-8 col-sm-12 justify-content-center">
                <div id="content" class="container text-center col-12 overflow-auto">
                    <!-- content .... import content here(homepage.html,feedback.html,adminlogin.html and any component)-->
                    <!-- end content -->

                    <div class="row justify-content-center my-5 border border-danger p-4">
                        <h3 class="text-danger my-3 col-12">Change password</h3>
                        <input type="password" class="form-control col-lg-3 m-2  btn-outline-danger" placeholder="Old password" id="txtoldpasswordteacher">
                        <input type="password" class="form-control col-lg-3 m-2  btn-outline-danger" placeholder="New password"id="txtnewpasswordteacher">
                        <input type="password" class="form-control col-lg-3 m-2  btn-outline-danger" placeholder="Confirm password"id="txtconfirmpassteacherr">
