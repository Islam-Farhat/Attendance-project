</html>
<script>
    $(document).ready(function () {
        //$('#txtvalidattendancelevel').hide();
        //$('#txtvalidattendanceclass').hide();
        //DropdownlistLevel();
        //DropdownlistClass();
        //$('#btnselectattendance').click(function () {
        //    loadData();

        //})
        $('#btnupdatepasswordteacher').click(function () {
            UpdatePassword();
        })
    })
    function UpdatePassword() {
        var teachid = $('#hdnTeacherID').val();
        var oldpass = $('#txtoldpasswordteacher').val();
        var newpass = $('#txtnewpasswordteacher').val();
        var confirmpass = $('#txtconfirmpassteacherr').val();
        if (confirmpass != newpass) {
            alert("Confirm Password is Wrong!")
        }
        $.ajax({
            url: "/AdminLogin/UpdatePassword?TeacherID=" + teachid + "&OldPassword=" + oldpass + "&Password=" + newpass,
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result == "Success") {
                    //ClearData();
                    //loadData();
                    alert("success")
                }
                else {
                    alert('Old Password is Wrong!');
                }
            }
        });
    }
</script>

